<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStep1"
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_marginEnd="@dimen/dp_4"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStep2"
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_marginEnd="@dimen/dp_4"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStep3"
                style="@style/TextViewRoundStyle"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:text="3" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescriptionStep"
            style="@style/TextViewHeaderStyle"
            android:layout_below="@+id/lnStep"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_11"
            android:gravity="center"
            android:text="@string/text_description_step_one"
            android:textSize="@dimen/sp_11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/tvDescriptionStep"
            android:background="@color/K_F3F5F4_gray" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llInputRegisterContainerLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/rlStep">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Health-Care"
            android:textColor="@color/Black"
            android:textSize="@dimen/sp_28"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInputRegisterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/llInputRegisterContainerLogo">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneNumberHeader"
            style="@style/TextViewHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/phone_number" />

        <com.lambui.healthcare_app.widget.viewInApp.EditTextCustom
            android:id="@+id/edtPhoneNumber"
            style="@style/EditTextCustomStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginBottom="@dimen/dp_18"
            app:hint="@string/phone_number" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/password"
            app:layout_constraintTop_toBottomOf="@+id/edtPhoneNumber" />

        <com.lambui.healthcare_app.widget.viewInApp.EditTextCustom
            android:id="@+id/edtPassword"
            style="@style/EditTextCustomStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginBottom="@dimen/dp_18"
            app:hint="@string/password" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/edtPhoneNumber" />

        <com.lambui.healthcare_app.widget.viewInApp.EditTextCustom
            android:id="@+id/edtConfirmPassword"
            style="@style/EditTextCustomStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginBottom="@dimen/dp_18"
            app:hint="@string/confirm_password" />
    </LinearLayout>

    <com.lambui.healthcare_app.widget.viewInApp.BottomButton
        android:id="@+id/btnRegisterSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:BottomButtonContent="@string/button_send"
        app:BottomButtonSelected="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llInputRegisterContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>