<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:src="@drawable/ic_user_temp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFullName"
                style="@style/TextViewHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/text_header_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivAvatar" />

            <com.lambui.healthcare_doctor.widget.viewInApp.EditTextCustom
                android:id="@+id/edtFullName"
                style="@style/EditTextStyle"
                android:layout_marginTop="@dimen/dp_8"
                app:hint="@string/text_hint_full_name_ex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFullName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDateOfBirth"
                style="@style/TextViewHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/text_birthday"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtFullName" />

            <com.lambui.healthcare_doctor.widget.viewInApp.EditTextCustom
                android:id="@+id/edtDateOfBirth"
                style="@style/EditTextStyle"
                android:layout_marginTop="@dimen/dp_8"
                app:hint="@string/text_hint_birth_date_ex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDateOfBirth" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGender"
                style="@style/TextViewHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/text_sex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtDateOfBirth" />

            <LinearLayout
                android:id="@+id/containerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvGender">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMale"
                    style="@style/TextViewOptionGenderStyle"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:layout_weight="1"
                    android:text="@string/text_male" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFemale"
                    style="@style/TextViewOptionGenderStyle"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:layout_weight="1"
                    android:text="@string/text_female" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUnknown"
                    style="@style/TextViewOptionGenderStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/text_unknown_gender" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPhoneNumberHeader"
                style="@style/TextViewHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/phone_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/containerGender" />

            <com.lambui.healthcare_doctor.widget.viewInApp.EditTextCustom
                android:id="@+id/edtPhoneNumber"
                style="@style/EditTextStyle"
                android:layout_marginTop="@dimen/dp_8"
                app:hint="@string/text_hint_phone_number_ex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberHeader" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnSubmit"
                style="@style/TextViewWithoutShadowStyle"
                android:layout_width="@dimen/dp_243"
                android:layout_marginTop="@dimen/dp_26"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="@string/button_send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPhoneNumber" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>