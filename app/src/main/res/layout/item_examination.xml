<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <View
        android:id="@+id/mViewLineTop"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/K_707070_gray" />

    <LinearLayout
        android:id="@+id/llContainerItemExamination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivExaminationType"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvExamination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/K_DE173833_green"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSelectItemCreditCard"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="end|center"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/ic_option_selected"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
