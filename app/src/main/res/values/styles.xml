<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
    </style>

    <style name="AppTheme.TextViewBold">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/black_text_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/K_666666_black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_54</item>
        <item name="android:background">@color/K_0D173833_green</item>
        <item name="android:textColor">@color/K_DE173833_green</item>
        <item name="android:textColorHint">@color/K_42173833_gray</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
    </style>

    <style name="TextViewDescriptionStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/K_8A173833_gray</item>
    </style>

    <style name="TextViewTitleToolbar">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/dp_5</item>
        <item name="android:paddingEnd">@dimen/dp_5</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextViewHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/K_DE173833_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="EditTextCustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/K_42173833_gray</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:background">@color/K_0D173833_green</item>
    </style>

    <style name="TextViewErrorStyle">
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/K_E9546A_red</item>
    </style>

    <style name="TextViewWithoutShadowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_54</item>
        <item name="android:background">@drawable/bg_button_general</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:state_selected">true</item>
    </style>

    <style name="TextViewDescriptionSplashStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/K_42173833_gray</item>
    </style>

    <style name="TextViewOptionStyle">
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:background">@drawable/bg_time_select_general</item>
        <item name="android:textColor">@color/cl_setting_time_select</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:state_selected">true</item>
    </style>

    <style name="TextViewOptionGenderStyle">
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:background">@drawable/bg_gender_general</item>
        <item name="android:textColor">@color/cl_setting_sex</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:state_selected">true</item>
    </style>

    <style name="TextViewWithoutShadowStyleStatusAppointment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:background">@drawable/bg_button_general</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:state_selected">true</item>
    </style>

    <style name="TextViewHeaderSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_57</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/K_8A173833_gray</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
    </style>

    <style name="TextViewRoundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tc_round_general</item>
        <item name="android:background">@drawable/bg_round_general</item>
    </style>

    <style name="TextViewSelectedBottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_54</item>
        <item name="android:background">@drawable/bg_button_gradient</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:gravity">center</item>
        <item name="android:state_selected">true</item>
    </style>

    <style name="TextWhiteOpacity100Size10">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/K_8A173833_gray</item>
    </style>

    <style name="TextViewWithoutShadowStyleStatusUpcomingAppointment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:background">@drawable/bg_button_upcoming_general</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:state_selected">false</item>
    </style>

    <style name="TextViewWithoutShadowStyleCompleteAppointment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:background">@drawable/bg_button_gradient_appointment</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:gravity">center</item>
        <item name="android:state_selected">false</item>
    </style>

    <style name="ViewLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/K_12173833_blue</item>
    </style>
    <style name="TextViewNameAppointmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/K_DE173833_green</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <style name="BaseDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="DialogBaseContainer" parent="Width_Match_Height_Wrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/bg_base_dialog</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
    </style>
    <style name="Width_Match_Height_Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextViewTitleDialog" parent="Width_Match_Height_Wrap">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:paddingStart">@dimen/dp_5</item>
        <item name="android:paddingEnd">@dimen/dp_5</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/K_173833_blue</item>
    </style>
    <style name="ButtonSelectedStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_54</item>
        <item name="android:background">@drawable/bg_button_gradient</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>
